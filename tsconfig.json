{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "lib": ["DOM", "ES5", "ES6", "ES2022"],
    "rootDir": ".",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": "./src/"
  },
  "include": [
    "src/**/*.ts",
    "src/types/**.d.ts"
, "src/save/deepmerge.js"  ],
  "exclude": [
    "eslint.config.js",
    "dist/**/*"
  ]
}
